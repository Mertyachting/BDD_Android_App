<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    <EditText
        android:id="@+id/e_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/asap"
        android:hint="@string/first_hint"
        android:inputType="text"
        android:textColorHint="#433A3A3A" />

    <EditText
        android:id="@+id/e_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/asap"
        android:hint="@string/second_hint"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/placeholder" />

    <EditText
        android:id="@+id/e_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/asap"
        android:hint="@string/third_hint"
        android:inputType="text"
        android:textColorHint="@color/placeholder" />

    <EditText
        android:id="@+id/e_phnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/asap"
        android:hint="@string/fourth_hint"
        android:inputType="number"
        android:textColorHint="@color/placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/primaryLightColor"
                android:fontFamily="@font/asap_bold"
                android:text="@string/create_list"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/viewdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/button_background"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/asap"
                android:text="@string/overview_list" />
          
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
    <Button
        android:id="@+id/viewdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#03D4AC"
        android:text="View data(RecycleView)" />

    <Button
        android:id="@+id/viewdataLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/viewdataLL"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/start_quote2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/asap_italic"
            android:text="@string/list_quote"
            android:textAlignment="center"
            android:textColor="@color/quote"
            android:textSize="16sp"
            tools:text="@string/list_quote" />
    </LinearLayout>


        <!--Display whether bluetooth is available or not-->
        <TextView
            android:id="@+id/statusBluetoothTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000"/>
        <!--Bluetooth icon (on/off)-->
        <ImageView
            android:id="@+id/bluetoothIv"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <!--On Button-->
        <Button
            android:id="@+id/onBtn"
            android:minWidth="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn On"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>
        <!--Off btn-->
        <Button
            android:id="@+id/offBtn"
            android:minWidth="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn Off"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>
        <!--Discoverable button-->
        <Button
            android:id="@+id/discoverableBtn"
            android:minWidth="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discoverable"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>
        <!--Get list of paired devices button-->
        <Button
            android:id="@+id/pairedBtn"
            android:minWidth="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Paired Devices"
            style="@style/Base.Widget.AppCompat.Button.Colored"/>
        <!--Show paired devices here-->
        <TextView
            android:id="@+id/pairedTv"
            android:minWidth="50dp"
            android:text=""
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


</LinearLayout>

