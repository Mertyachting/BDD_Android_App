<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:title="@string/app_name_long"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="#ffff"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/task_add_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/asap_bold"
        android:text="@string/task_to_add"
        android:textColor="@color/app_name_text"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/e_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/asap"
        android:hint="@string/first_hint"
        android:inputType="text"
        android:textColorHint="#433A3A3A" />

    <EditText
        android:id="@+id/e_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/asap"
        android:hint="@string/second_hint"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/placeholder" />

    <EditText
        android:id="@+id/e_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/asap"
        android:hint="@string/third_hint"
        android:inputType="text"
        android:textColorHint="@color/placeholder" />

    <EditText
        android:id="@+id/e_phnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/asap"
        android:hint="@string/fourth_hint"
        android:inputType="number"
        android:textColorHint="@color/placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/btn_save"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/asap_bold"
                android:text="@string/create_list" />

            <Button
                android:id="@+id/viewdata"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/asap"
                android:text="@string/overview_list" />

            <Button
                android:id="@+id/viewdataLL"
                android:layout_width="0dp"
                android:layout_height="11dp"
                android:background="@android:color/transparent" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/start_quote2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/asap_italic"
                android:text="@string/list_quote"
                android:textAlignment="center"
                android:textColor="@color/quote"
                android:textSize="16sp"
                tools:text="@string/list_quote" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:text="Button" />

    <TextView
        android:id="@+id/textView_request"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <!--Display whether bluetooth is available or not-->
            <TextView
                android:id="@+id/statusBluetoothTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/asap"
                android:text="@string/bluetooth" />

            <!--Bluetooth icon (on/off)-->
            <ImageView
                android:id="@+id/bluetoothIv"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:tint="#81000000" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--On Button-->
        <Button
            android:id="@+id/onBtn"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/on"
            android:textSize="10sp" />

        <!--Off btn-->
        <Button
            android:id="@+id/offBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/off"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:textSize="10sp" />

        <!--Discoverable button-->
        <Button
            android:id="@+id/discoverableBtn"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/discoverable"
            android:textSize="10sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--Get list of paired devices button-->
        <Button
            android:id="@+id/pairedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paired_dev"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/pairedTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textColor="#000"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>